<div class="container-fluid">
  <div class="row justify-content-center mt-3">
    <h1 class="border-bottom border-gray">会員登録情報編集</h1>
  </div>




  <%= form_with model: @user do |f| %>
  <label for="inputName">NickName</label>
  <%= f.text_field :nickname, autofocus: true, id:"inputName", placeholder:"ニックネーム"%>
  <label for="inputImage">ProfileImage</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  <%= f.submit "変更を保存" %>
<% end %>


<%= form_with model: @user, url: user_path(@user) do |f| %>
<%= render "user/shared/error_messages", resource: @user %>

<div class="field">
  <%= f.label :'ニックネーム' %><br />
  <%= f.text_field :nickname, autocomplete: "new-nickname" %>
</div>
<div class="field">
  <%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
</div>

<div class="actions mt-2">
  <%= f.submit "Update", class: 'btn btn-secondary btn-md' %>
</div>
<% end %>

  <div class="d-grid gap-2 d-md-flex justify-content-md-end">
    <strong><%= link_to "退会の手続きはこちら", withdraw_confirm_path, class: 'btn btn-outline-danger btn-sm' %></strong>
 </div>
