<div class="container-fluid">
  <div class="row justify-content-center mt-3">
    <h1 class="border-bottom border-gray">カテゴリー管理・一覧画面</h1>
  </div>
  
    <div class="row p-4">
    <div class="col-4">
      
     <%=form_with model: @category,url: admin_categories_path, method: :post do |f| %>
      <%= f.label :"カテゴリー名", class: "mr-5" %>
      <%= f.text_field :category_name, class: "mr-5" %>
      <%= f.submit'新規登録',class: "btn btn-primary btn-sm" %>
     <% end %>
  </div>
  </div>
  <div class="row">
    <div class="col-4">
      <table class='table'>
        <thead>
          <tr><th>カテゴリー</th></tr>
        </thead>
        <tbody>
         <% @category.each do |category| %>
          <tr>
            <td>
              <%= category.category_name %>
            </td>
            <td class="d-grid gap-2 d-md-flex justify-content-md-end">
              <%= link_to "編集する", edit_admin_category_path(category.id), class: "btn btn-success btn-sm" %>
            </td>
          </tr>
         <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

  