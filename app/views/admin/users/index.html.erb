<div class="container">
  <h2 class="page-title">管理者側　ユーザーの一覧</h2>

  <div class="row">
    <table class='table'>
      <thead>
        <tr>
          <th>ユーザーID</th>
          <th>ニックネーム</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= link_to admin_user_path(user.id) do %><%= user.nickname %><% end %></td>
            <td><%= user.email %></td>
            <td><% if user.is_deleted %>
            退会
            <% else %>
            有効
            <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @users %>
  </div>
</div>

